    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
  }

  .section-title {
    font-size: 1.8rem;
    margin-bottom: 1rem;
    color: var(--text-color);
  }

  .section-desc {
    color: var(--text-muted);
    margin-bottom: 2rem;
    font-size: 1.1rem;
  }

  .social-links {
    display: grid;
